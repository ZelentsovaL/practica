<Window x:Class="practice.Views.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practice.Views"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <StackPanel Width="200" VerticalAlignment="Center">
            <TextBox x:Name="IDBox"/>
            <TextBox x:Name="LastName"/>
            <TextBox x:Name="FirstName"/>
            <TextBox x:Name="MiddleName"/>
            <TextBox x:Name="PositionBox"/>
            <TextBox x:Name="DepartmentBox"/>
            <TextBox x:Name="InfoBox"/>
            <Button x:Name="AddBtn" Content="Add Employee" Click="AddBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
